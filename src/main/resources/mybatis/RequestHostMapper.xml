<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="RequestHostMapper">
    <resultMap id="BaseResultMap" type="com.orienjoy.tower.bean.RequestHost">
        <id column="id" property="id"/>
        <result column="host" property="host"/>
        <result column="project" property="project"/>
        <result column="description" property="description"/>
        <result column="create_staff" property="createStaff"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="BeanProperty">
        id, project, description, create_staff, create_time
    </sql>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into request_host (project, description, create_staff, create_time)
        values (#{project}, #{description}, #{createStaff}, #{createTime})
    </insert>

    <select id="find" resultMap="BaseResultMap">
        select <include refid="BeanProperty"/>
        from request_host
        where id = #{id}
    </select>

    <select id="findByIds" resultMap="BaseResultMap">
        select <include refid="BeanProperty"/>
        from request_host
        where id in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        select <include refid="BeanProperty"/>
        from request_host
    </select>
</mapper>